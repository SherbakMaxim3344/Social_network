    <style>
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #8B5FBF 0%, #7A4BA6 100%);
            padding: 2rem;
        }
        .login-card {
            background: white;
            border-radius: 25px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.1);
            overflow: hidden;
            max-width: 420px;
            width: 100%;
        }
        .login-header {
            background: linear-gradient(135deg, #8B5FBF 0%, #7A4BA6 100%);
            color: white;
            text-align: center;
            padding: 2.5rem 2rem;
        }
        .login-body {
            padding: 2.5rem 2rem;
        }
        .form-control {
            border-radius: 12px;
            padding: 0.75rem 1rem;
            border: 2px solid #E5E7EB;
            transition: all 0.3s ease;
        }
        .form-control:focus {
            border-color: #8B5FBF;
            box-shadow: 0 0 0 3px rgba(139, 95, 191, 0.1);
        }
        .btn-login {
            background: linear-gradient(135deg, #8B5FBF 0%, #7A4BA6 100%);
            border: none;
            border-radius: 12px;
            padding: 0.75rem 2rem;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
        }
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(139, 95, 191, 0.3);
        }
        .login-links {
            text-align: center;
            margin-top: 1.5rem;
        }
        .test-accounts {
            background: rgba(139, 95, 191, 0.1);
            border-radius: 12px;
            padding: 1rem;
            margin-top: 1.5rem;
            font-size: 0.9rem;
        }
    </style>
</head>

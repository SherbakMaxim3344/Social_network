    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // –ê–Ω–∏–º–∞—Ü–∏—è –∞–≤–∞—Ç–∞—Ä–∞ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
            const avatar = document.getElementById('profile-avatar');
            if (avatar) {
                avatar.style.opacity = '0';
                avatar.style.transform = 'scale(0.8)';
                
                setTimeout(() => {
                    avatar.style.transition = 'all 0.5s ease';
                    avatar.style.opacity = '1';
                    avatar.style.transform = 'scale(1)';
                }, 100);
            }
            
            // –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ—è–≤–ª–µ–Ω–∏—è –¥—Ä—É–∑–µ–π
            const friendPreviews = document.querySelectorAll('.friend-preview');
            friendPreviews.forEach((preview, index) => {
                preview.style.opacity = '0';
                preview.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    preview.style.transition = 'all 0.5s ease';
                    preview.style.opacity = '1';
                    preview.style.transform = 'translateY(0)';
                }, 200 + (index * 100));
            });
        });
    </script>
</body>
</html>
{
  "name": "social-network-admin",
  "version": "1.0.0",
  "type": "module",
  "description": "Social network administration panel with user management, friends system, and news feed. Supports Gulp and Webpack builds with HTTPS security.",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:https": "node app.js",
    "start:http": "node app-http.js",
    "dev": "node --watch app.js",
    "build:gulp": "gulp build",
    "build:webpack": "webpack --mode=production",
    "build:all": "gulp build && webpack --mode=production",
    "ssl:generate": "mkdir -p ssl && openssl req -x509 -newkey rsa:4096 -nodes -keyout ssl/localhost.key -out ssl/localhost.crt -days 365 -subj \"/CN=localhost\"",
    "docker:build": "./build-and-run.sh",
    "docker:clean": "docker-compose down && docker system prune -f",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down",
    "prepublishOnly": "npm run ssl:generate && npm run build:all"
  },
  "keywords": [
    "social",
    "network", 
    "admin",
    "express",
    "ejs",
    "bootstrap",
    "less",
    "gulp",
    "webpack",
    "https",
    "user-management"
  ],
  "author": "Maxim Shcherbak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxim-shcherbak/social-network-admin"
  },
  "homepage": "https://github.com/maxim-shcherbak/social-network-admin",
  "bugs": {
    "url": "https://github.com/maxim-shcherbak/social-network-admin/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "ejs": "^3.1.9",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "del": "^7.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-less": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "less": "^4.2.0",
    "less-loader": "^11.1.3",
    "mini-css-extract-plugin": "^2.7.6",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "files": [
    "app.js",
    "src/",
    "views/",
    "data/",
    "public/",
    "ssl/",
    "dist-gulp/",
    "dist-webpack/",
    "gulpfile.js",
    "webpack.config.js",
    "Dockerfile",
    "docker-compose.yml",
    "build-and-run.sh"
  ]
}
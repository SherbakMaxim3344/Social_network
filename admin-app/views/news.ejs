<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <% if (buildType === 'gulp') { %>
        <link href="/dist-gulp/css/main.min.css" rel="stylesheet">
    <% } else { %>
        <link href="/dist-webpack/css/main.min.css" rel="stylesheet">
    <% } %>
</head>
<body>
    <!-- Навигация -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/?build=<%= buildType %>">
                <i class="fas fa-users me-2"></i>Социальная сеть
            </a>
            
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" 
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-tools me-2"></i>
                        Сборка: <span class="fw-bold ms-1"><%= buildType %></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" href="?build=gulp">
                            <i class="fas fa-cube me-2"></i>Gulp сборка
                        </a></li>
                        <li><a class="dropdown-item" href="?build=webpack">
                            <i class="fas fa-cogs me-2"></i>Webpack сборка
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Заголовок -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <a href="/?build=<%= buildType %>" class="btn btn-secondary me-3">
                    <i class="fas fa-arrow-left me-1"></i>Назад
                </a>
                <h1 class="d-inline-block text-white">
                    <i class="fas fa-newspaper me-2"></i><%= title %>
                </h1>
            </div>
            <span class="badge bg-success fs-6 px-3 py-2">
                Постов: <%= posts.length %>
            </span>
        </div>

        <!-- Карточка текущего пользователя -->
        <div class="card friend-card mb-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <img src="<%= user.avatar || '/public/images/default-avatar.png' %>" 
                         alt="<%= user.name %>" 
                         class="friend-avatar me-3"
                         onerror="this.src='/public/images/default-avatar.png'">
                    <div>
                        <h5 class="card-title mb-1"><%= user.name %></h5>
                        <p class="card-text text-muted mb-0">Лента новостей пользователя и его друзей</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Лента новостей -->
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <% if (posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                        <div class="card news-post mb-4 fade-in">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="d-flex align-items-center">
                                        <img src="<%= post.author.avatar || '/public/images/default-avatar.png' %>" 
                                             alt="<%= post.author.name %>" 
                                             class="friend-avatar me-3"
                                             onerror="this.src='/public/images/default-avatar.png'">
                                        <div>
                                            <h6 class="post-author mb-1"><%= post.author.name %></h6>
                                            <small class="post-date text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                <%= new Date(post.createdAt).toLocaleString('ru-RU') %>
                                            </small>
                                        </div>
                                    </div>
                                    <% if (post.author.id === user.id) { %>
                                        <span class="badge bg-primary">Ваш пост</span>
                                    <% } %>
                                </div>
                                
                                <div class="post-content">
                                    <p class="mb-0"><%= post.content %></p>
                                </div>
                                
                                <% if (post.image) { %>
                                    <div class="mt-3">
                                        <img src="<%= post.image %>" alt="Post image" class="img-fluid rounded">
                                    </div>
                                <% } %>
                                
                                <div class="mt-3 pt-3 border-top border-dark">
                                    <small class="text-muted">
                                        <i class="fas fa-heart me-1 text-danger"></i><%= post.likes || 0 %> лайков
                                        <i class="fas fa-comment ms-3 me-1 text-info"></i><%= post.comments || 0 %> комментариев
                                    </small>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                        <h3 class="text-muted">Нет новостей</h3>
                        <p class="text-muted">В ленте пока нет новостей от друзей</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <% if (buildType === 'gulp') { %>
        <script src="/dist-gulp/js/main.min.js"></script>
    <% } else { %>
        <script src="/dist-webpack/js/main.min.js"></script>
    <% } %>
</body>
</html>
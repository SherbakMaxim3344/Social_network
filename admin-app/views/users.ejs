<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <!-- Подключаем стили в зависимости от типа сборки -->
    <% if (buildType === 'gulp') { %>
        <link href="/dist-gulp/css/main.min.css" rel="stylesheet">
    <% } else { %>
        <link href="/dist-webpack/css/main.min.css" rel="stylesheet">
    <% } %>
</head>
<body class="dark-theme">
    <!-- Навигация Bootstrap -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/?build=<%= buildType %>">
                <i class="fas fa-users me-2"></i>Социальная сеть
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" 
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-tools me-2"></i>
                            Сборка: <span class="fw-bold ms-1"><%= buildType %></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" href="?build=gulp">
                                <i class="fas fa-cube me-2"></i>Gulp сборка
                            </a></li>
                            <li><a class="dropdown-item" href="?build=webpack">
                                <i class="fas fa-cogs me-2"></i>Webpack сборка
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Заголовок и счетчик -->
        <div class="row align-items-center mb-4">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold text-white">
                    <i class="fas fa-users me-3"></i><%= title %>
                </h1>
            </div>
            <div class="col-md-4 text-md-end">
                <span class="badge bg-primary fs-6 px-3 py-2">
                    <i class="fas fa-user-friends me-2"></i>Всего: <%= users.length %>
                </span>
            </div>
        </div>

        <!-- Сетка карточек пользователей -->
        <div class="row g-4">
            <% users.forEach(user => { %>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card user-card h-100 border-0 shadow fade-in">
                    <div class="card-body p-4">
                        <!-- Верхняя часть карточки -->
                        <div class="d-flex align-items-start mb-3">
                            <!-- Аватар -->
                            <div class="flex-shrink-0">
                                <img src="<%= user.avatar || '/public/images/default-avatar.png' %>" 
                                     alt="<%= user.name %>" 
                                     class="user-avatar"
                                     onerror="this.src='/public/images/default-avatar.png'">
                            </div>
                            
                            <!-- Информация пользователя -->
                            <div class="flex-grow-1 ms-3">
                                <!-- Имя и роль -->
                                <div class="d-flex flex-wrap align-items-center gap-2 mb-2">
                                    <h5 class="card-title mb-0 text-white fw-bold"><%= user.name %></h5>
                                    <span class="role-badge <%= user.role %> small">
                                        <i class="fas fa-<%= 
                                            user.role === 'admin' ? 'crown' : 
                                            user.role === 'moderator' ? 'shield-alt' : 'user' 
                                        %> me-1"></i>
                                        <%= user.role === 'admin' ? 'ADMIN' : 
                                           user.role === 'moderator' ? 'MOD' : 'USER' %>
                                    </span>
                                </div>
                                
                                <!-- Email -->
                                <p class="card-text text-muted mb-2">
                                    <i class="fas fa-envelope me-2"></i><%= user.email %>
                                </p>
                                
                                <!-- Дата рождения -->
                                <p class="card-text text-muted mb-2">
                                    <i class="fas fa-birthday-cake me-2"></i>
                                    <%= new Date(user.birthDate).toLocaleDateString('ru-RU') %>
                                </p>
                                
                                <!-- Статус -->
                                <div class="mt-3">
                                    <span class="status-badge <%= user.status %>">
                                        <i class="fas fa-<%= 
                                            user.status === 'active' ? 'check-circle' : 
                                            user.status === 'blocked' ? 'ban' : 'clock' 
                                        %> me-1"></i>
                                        <%= user.status === 'active' ? 'Активный' : 
                                           user.status === 'blocked' ? 'Заблокирован' : 'Не подтвержден' %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Кнопки действий -->
                    <div class="card-footer border-0 bg-transparent pt-0">
                        <div class="action-buttons">
                            <a href="/users/<%= user.id %>/edit?build=<%= buildType %>" 
                               class="btn btn-warning btn-sm flex-fill">
                                <i class="fas fa-edit me-2"></i>Редактировать
                            </a>
                            <a href="/friends/<%= user.id %>?build=<%= buildType %>" 
                               class="btn btn-info btn-sm flex-fill">
                                <i class="fas fa-user-friends me-2"></i>Друзья
                            </a>
                            <a href="/news/<%= user.id %>?build=<%= buildType %>" 
                               class="btn btn-success btn-sm flex-fill">
                                <i class="fas fa-newspaper me-2"></i>Новости
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <!-- Сообщение если нет пользователей -->
        <% if (users.length === 0) { %>
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="fas fa-users fa-4x text-muted mb-4"></i>
                <h3 class="text-muted">Пользователи не найдены</h3>
                <p class="text-muted">Нет зарегистрированных пользователей в системе</p>
            </div>
        </div>
        <% } %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Подключаем скрипты в зависимости от типа сборки -->
    <% if (buildType === 'gulp') { %>
        <script src="/dist-gulp/js/main.min.js"></script>
    <% } else { %>
        <script src="/dist-webpack/js/main.min.js"></script>
    <% } %>
</body>
</html>